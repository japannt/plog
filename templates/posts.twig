{% extends "base.twig" %}

{% block content %}
	<h1>Post list</h1>
	{% if posts %}
		{% for post in posts %}
			<div class="post-preview">
				<h1><a href="/post?id={{ post.id }}#">{{ post.title }}</a></h1>
				<p>{{ post.description }}<span>Posted on: {{ post.timestamp|date("F j, Y") }}</span></p>
			</div>
		{% endfor %}
	{% else %}
		<h2>No posts found</h2>
	{% endif %}
{% endblock %}
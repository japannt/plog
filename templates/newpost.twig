{% extends "base.twig" %}

{% block content %}
	<h1>Admin Panel/New Post</h1>
	<form action="/admin/new/post.php" method="post" enctype="multipart/form-data">
		<label for="title">Title</label>
		<input type="text" name="title" id="title" value="{{ session.title }}">
		<label for="description">Description</label>
		<input type="text" name="description" id="description" value="{{ session.description }}">
		<label for="content">Markdown</label>
		<textarea name="content" id="content" cols="30" rows="20">{{ session.content }}</textarea>
		<input type="submit" value="Save">
	</form>
{% endblock %}